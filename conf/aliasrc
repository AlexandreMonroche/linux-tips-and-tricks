# ----------
# Aliases

export EDITOR=nano

# LS Aliases
alias ls="ls --color=auto"
alias l="ls -lrth"
alias ll="l -a"

# Aliases divers
alias space="df -h /dev/mapper/alexandre--pc--vg-*"
alias space-folder="du -ach . --max-depth 1"
alias shred-folder="find . -type f -print0 | xargs -0 shred -fuzv -n 48"
alias monip="curl ifconfig.co"
alias history-clear="ln -sf /dev/null ~/.zhistory"
alias grep='grep --color'
alias sgrep='grep -R -n -H -C 5 --exclude-dir={.git,.svn,CVS} '
